<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - Dark Mode</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #6366f1;
            --primary-hover: #4f46e5;
            --bg-color: #0f172a;
            --card-bg: #1e293b;
            --text-main: #f8fafc;
            --text-muted: #94a3b8;
            --border-color: #334155;
        }

        body {
            background-color: var(--bg-color);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: 'Segoe UI', system-ui, sans-serif;
            color: var(--text-main);
        }

        /* Animation */
        @keyframes zoomFade {
            0% { opacity: 0; transform: scale(0.95); }
            100% { opacity: 1; transform: scale(1); }
        }

        .register-card {
            background-color: var(--card-bg);
            border-radius: 16px;
            box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.5);
            width: 100%;
            max-width: 450px;
            padding: 40px;
            border: 1px solid rgba(255, 255, 255, 0.05);
            animation: zoomFade 0.6s ease-out;
        }

        .brand-title { font-weight: 700; margin-bottom: 8px; letter-spacing: -0.5px; }

        /* --- NEW: Animated Underline Input Styles --- */
        .input-group-modern {
            position: relative;
            margin-bottom: 30px;
        }

        .input-group-modern input {
            width: 100%;
            padding: 10px 0;
            font-size: 16px;
            color: var(--text-main);
            background: transparent;
            border: none;
            border-bottom: 2px solid var(--border-color);
            outline: none;
            transition: 0.3s;
            padding-right: 35px;
        }

        .input-group-modern input::placeholder {
            color: var(--text-muted);
            opacity: 0.7;
        }

        .input-group-modern .underline {
            position: absolute;
            bottom: 0;
            left: 0;
            height: 2px;
            width: 100%;
            background-color: var(--primary-color);
            transform: scaleX(0);
            transform-origin: bottom right;
            transition: transform 0.4s ease-out;
        }

        .input-group-modern input:focus ~ .underline {
            transform: scaleX(1);
            transform-origin: bottom left;
        }

        .password-toggle {
            position: absolute;
            right: 0;
            top: 10px;
            background: none;
            border: none;
            color: var(--text-muted);
            cursor: pointer;
            padding: 0;
            z-index: 10;
        }
        .password-toggle:hover {
            color: var(--text-main);
        }

        /* Autofill Fix */
        input:-webkit-autofill, input:-webkit-autofill:hover, input:-webkit-autofill:focus, input:-webkit-autofill:active {
            -webkit-box-shadow: 0 0 0 30px var(--card-bg) inset !important;
            -webkit-text-fill-color: var(--text-main) !important;
        }

        .btn-primary-modern {
            background-color: var(--primary-color);
            border: none;
            padding: 12px;
            border-radius: 10px;
            font-weight: 600;
            width: 100%;
            margin-top: 10px;
            transition: all 0.2s;
        }

        .btn-primary-modern:hover {
            background-color: var(--primary-hover);
            transform: translateY(-2px);
            box-shadow: 0 10px 15px -3px rgba(99, 102, 241, 0.4);
        }

        .link-modern { color: var(--primary-color); text-decoration: none; font-weight: 500; }
        .link-modern:hover { color: #818cf8; }
        .text-muted { color: var(--text-muted) !important; }
    </style>
</head>
<body>
    <div class="register-card">
        <div class="text-center mb-5">
            <h2 class="brand-title">Create Account</h2>
            <p class="text-muted">Join us today! It takes less than a minute.</p>
        </div>

        <form action="/register" method="post" onsubmit="return checkValidate()">
            <div class="input-group-modern">
                <input type="text" id="name" placeholder="Full Name" name="name">
                <span class="underline"></span>
            </div>

            <div class="input-group-modern">
                <input type="email" id="email" placeholder="Email address" name="email">
                <span class="underline"></span>
            </div>
            
            <div class="input-group-modern">
                <input type="password" id="password" placeholder="Password" name="password">
                <button type="button" class="password-toggle" onclick="togglePassword('password', this)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg>
                </button>
                <span class="underline"></span>
            </div>

            <div class="input-group-modern">
                <input type="password" id="confPassword" placeholder="Confirm Password">
                <button type="button" class="password-toggle" onclick="togglePassword('confPassword', this)">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
                        <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                        <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                    </svg>
                </button>
                <span class="underline"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-primary-modern mb-4">Create Account</button>

            <div class="text-center text-muted small">
                Already have an account?
                <a href="/" class="link-modern">Log in</a>
            </div>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <% if (typeof msg !== 'undefined') { %>
        <script>
            Swal.fire({
                title: "<%=msg%>",
                text: "That thing is still around?",
                icon: "<%=icon%>",
                background:'#0F172A',
                color: '#DADACE',
            });
            const url = window.location.protocol + "//" + window.location.host + window.location.pathname;
            window.history.replaceState({path: url}, '', url);
        </script>
    <% } %>
    <!-- Form Validation -->
    <script>
        function togglePassword(inputId, btn) {
            const input = document.getElementById(inputId);
            const icon = btn.querySelector('svg');
            
            if (input.type === "password") {
                input.type = "text";
                // Change to Eye Slash
                icon.innerHTML = `
                    <path d="M13.359 11.238C15.06 9.72 16 8 16 8s-3-5.5-8-5.5a7.028 7.028 0 0 0-2.79.588l.77.771A5.944 5.944 0 0 1 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.134 13.134 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755-.165.165-.337.328-.517.486l.708.709z"/>
                    <path d="M11.297 9.176a3.5 3.5 0 0 0-4.474-4.474l.823.823a2.5 2.5 0 0 1 2.829 2.829l.822.822zm-2.943 1.299.822.822a3.5 3.5 0 0 1-4.474-4.474l.823.823a2.5 2.5 0 0 0 2.829 2.829z"/>
                    <path d="M3.35 5.47c-.18.16-.353.322-.518.487A13.134 13.134 0 0 0 1.172 8l.195.288c.335.48.83 1.12 1.465 1.755C4.121 11.332 5.881 12.5 8 12.5c.716 0 1.39-.133 2.02-.36l.77.772A7.029 7.029 0 0 1 8 13.5C3 13.5 0 8 0 8s.939-1.721 2.641-3.238l.708.709zm10.296 8.884-12-12 .708-.708 12 12-.708.708z"/>
                `;
            } else {
                input.type = "password";
                // Change back to Eye
                icon.innerHTML = `
                    <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
                    <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                `;
            }
        }

        function checkValidate() {
            const fields = {
                name: document.getElementById("name"),
                email: document.getElementById("email"),
                pass: document.getElementById("password"),
                conf: document.getElementById("confPassword")
            };

            let isValid = true;
            fields.pass.type = "Text"
            fields.conf.type = "Text"
            const setInvalid = (el, message) => {
                el.value = message;
                el.style.color = "Red";
                isValid = false;
            };

            Object.values(fields).forEach(input => {
                if (input.value.trim() === "") {
                    setInvalid(input, "Required Field");
                }
            });

            
            if (isValid) {
                
                const nameRegex = /^[A-Z][a-zA-Z '.-]*$/;
                if (!nameRegex.test(fields.name.value)) {
                    setInvalid(fields.name, "Invalid Name");
                }

                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                if (!emailRegex.test(fields.email.value)) {
                    setInvalid(fields.email, "Invalid Email");
                }

                if (fields.pass.value !== fields.conf.value) {
                    fields.pass.value = "";
                    setInvalid(fields.conf, "Passwords do not match");
                }
            }

            return isValid;
        }
    </script>
</body>
</html>